<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7E171717">

    <Button
        android:id="@+id/mapa"
        android:layout_width="167dp"
        android:layout_height="38dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="441dp"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="104dp"
        android:background="#FFFFFF"
        android:backgroundTint="#5AFF9100"
        android:text="VER LOCALIZACAO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.795" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="421dp"
        android:layout_height="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="412dp"
        android:background="#52555453"
        android:lineSpacingExtra="10sp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.801"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="416dp"
        android:layout_height="114dp"
        android:layout_marginBottom="433dp"
        android:background="#E19F65"
        android:lineSpacingExtra="10sp"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.822"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="49dp"
        android:layout_height="82dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="438dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#F57F17"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mapa"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bemVindo"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <TextView
        android:id="@+id/bemVindo"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginStart="43dp"
        android:layout_marginEnd="206dp"
        android:text="Bem Vindo!"
        android:textAllCaps="false"
        android:textColor="#2C2C2B"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.093" />

</androidx.constraintlayout.widget.ConstraintLayout>